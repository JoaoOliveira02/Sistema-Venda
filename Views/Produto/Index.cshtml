@{
    ViewData["Title"] = "Produtos";
}

@model List<SistemaVenda.Models.ProdutoViewModel>;

<h2>Produtos</h2>
<hr />

<table class="table table-bordered">
    <thead>
        <tr style="background-color:#f6f6f6;">
            <th>Código</th>
            <th>Descrição</th>
            <th>Quantidade</th>
            <th>Valor</th>
            <th>Categoria</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr onclick="Editar(@item.Codigo)" style="cursor:pointer;">
                <td>@item.Codigo</td>
                <td>@item.Descricao</td>
                <td>@item.Quantidade</td>
                <td>@item.Valor</td>
                <td>@item.DescricaoCategoria</td>
            </tr>
        }
    </tbody>
</table>
<br />
<button type="button" class="btn btn-lg btn-primary" onclick="Cadastrar()">Cadastrar Produto</button>

<script>
    function Editar(Codigo) {
        window.location = window.origin + "\\Produto\\Cadastro\\" + Codigo;
    }

    function Cadastrar() {
        window.location = window.origin + "\\Produto\\Cadastro";
    }
</script>